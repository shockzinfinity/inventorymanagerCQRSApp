@model dynamic

@{
    ViewBag.Title = "Add Inventory Item";
}

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "$('.btn').button('loading');" }))
{
<h2>Add Inventory Item</h2>

<div class="control-group">
	<label class="control-label" for="name">Name </label>
	<div class="controls">
		@Html.TextBox("name")
	</div>
</div>

<div class="form-group">
	<button type="submit" data-loading-text="Loading..." name="Action" value="CreateContentPackage" class="btn btn-primary">Add</button>
</div>
}